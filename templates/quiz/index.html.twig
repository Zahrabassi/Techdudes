{% extends 'dash.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}    {{ include('header.html.twig') }}
<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list single-page-breadcome">
                                <div class="add-product">
                                    <a href="{{ path('quiz_new') }}">Create new</a>
                                </div>

                            <div class="container">
        <h1 class="mt-5">Quiz index</h1>

        <p class="float-lg-right btn btn-outline-primary">

    </p>
        <table class="table" id="tableac">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.id }}</td>
                    <td>{{ quiz.titre }}</td>
                    <td>{{ quiz.description }}</td>
                    <td>
                        <a href="{{ path('quiz_show', {'id': quiz.id}) }}">show</a>
                        <a href="{{ path('quiz_edit', {'id': quiz.id}) }}">edit</a>
                    </td>
                </tr>
                <script>
                    $(document).ready(function(){
                        $('#search').keyup(function(){
                            search_table($(this).val());
                        });
                        function search_table(value){
                            $('#tableac tbody tr').each(function(){
                                var found = 'false';
                                $(this).each(function(){
                                    if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                                    {
                                        found = 'true';
                                    }
                                });
                                if(found == 'true')
                                {
                                    $(this).show();

                                }
                                else
                                {
                                    $(this).hide();

                                }
                            });
                        }
                    });
                </script>
            {% endfor %}
            <input type="text" id="search" name="search" class="form-control" placeholder="Search">
            </tbody>
        </table>

    </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    {{ include('footer.html.twig') }}

{% endblock %}
