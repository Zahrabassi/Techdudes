{% extends 'front/layout.html.twig' %}

{% block title %}{{ formation.intitule }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="{{ asset('formations/'~  formation.img) | default('https://via.placeholder.com/600x400') }}" alt="{{ formation.intitule }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ formation.intitule }}</h1>
                <h2>{{ formation.prix }} TND</h2>
                <hr>
                <b>Description: </b>{{ formation.description }}
                {{ form_start(form, {'attr': {'class': 'mt-4 p-4 bg-light'}}) }}
                {# <div class="form-group">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity, {
                        'attr': {
                            'class': 'form-control ' ~ (form.quantity.vars.valid ? '' : 'is-invalid')
                        }
                    }) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.quantity) }}
                    </div>
                </div> #}
                {{ form_widget(form.add, {'attr': {'class': 'btn btn-warning w-25'}}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
