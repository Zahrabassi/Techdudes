{% extends 'front/layout.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Your Cart</h1>
        {% if cart.count > 0 %}
            <div class="row mt-4">
                <!-- List of items -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-dark text-white d-flex">
                            <h5>Items</h5>
                            <div class="ml-auto">
                                <a href="{{ path('cart_clear') }}" class="btn btn-light">Clear</a>
                            </div>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for item in cart.items %}
                                <li class="list-group-item d-flex">
                                    <div class="flex-fill mr-2">
                                        <img src="{{ asset('formations/'~ item.img) | default('https://via.placeholder.com/200x150') }}"
                                             width="64" alt="Product image">
                                    </div>
                                    <div class="flex-fill mr-2">
                                        <h5 class="mt-0 mb-0">{{ item.name }}</h5>
                                        <small>{{ item.description[:50] }}...</small>
                                    </div>
                                    <div class="flex-fill mr-2 text-right">
                                        <b>{{ item.price }} TND</b>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <!-- Summary -->
                <div class="col-md-4">
                    <div class="card mt-4 mt-md-0">
                        <h5 class="card-header bg-dark text-white">Summary</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <div><b>Total</b></div>
                                <span><b>{{ cart.totalPrice }} TND</b></span>
                            </li>
                        </ul>
                        <div class="card-body">
                            <a href="{{ path('cart_checkout') }}" class="btn btn-warning w-100">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                Your cart is empty. Go to the <a href="{{ path('listformation') }}">Formation list</a>.
            </div>
        {% endif %}
    </div>
{% endblock %}
