{% extends 'baseBack.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div style="padding: 20px;" class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="product-payment-inner-st">
                <div style="padding: 11px;" class="row">
                    {{ form_start(reclamationform) }}
                    <div class="row">
                        <center>
                            <h4>Modifier cette Reclamation</h4>
                        </center>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(reclamationform.sujet, { 'attr' : { 'class' : 'form-control','placeholder' : 'Sujet' } }) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(reclamationform.type, { 'attr' : { 'class' : 'form-control','placeholder' : 'Type' } }) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_widget(reclamationform.contenu, { 'attr' : { 'class' : 'form-control','placeholder' : 'Contenu' } }) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-edit"></i>&nbsp;Modifier</button>
                        </div>
                    </div>
                    {{ form_end(reclamationform) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="//cdn.ckeditor.com/4.11.2/standard/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script>
        CKEDITOR.replace('reclamation_contenu');
    </script>
{% endblock %}
