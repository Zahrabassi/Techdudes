{% extends 'back/layout.html.twig' %}

{% block title %}
    Promotion
{% endblock %}

{% block body %}

    <div class="product-status mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap drp-lst">
                        {{ form_start(form, {'attr': {'class': 'add-department'}}) }}
                        <div class="form-group">
                            {{ form_widget(form.promo, {
                                'attr':
                                {
                                    'class': 'form-control',
                                    'placeholder': 'Promo'
                                }
                            }) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.promo) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.date, {
                                'attr':
                                {
                                    'class': 'form-control hasDatepicker',
                                    'placeholder': 'Date (yyyy-mm-dd)',
                                }
                            }) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.date) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Formation</label>
                            {{ form_widget(form.formation, {
                                'attr':
                                {
                                    'class': 'form-control',
                                    'placeholder': 'Promo'
                                }
                            }) }}
                        </div>
                        {{ form_widget(form.save, {
                            'attr':
                            {
                                'class': 'btn btn-primary waves-effect waves-light'
                            }
                        }) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block extraJS %}
    <!-- datepicker JS============================================ -->
    <script src="{{ asset('assets/js/datepicker/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('assets/js/datepicker/datepicker-active.js') }}"></script>
{% endblock %}