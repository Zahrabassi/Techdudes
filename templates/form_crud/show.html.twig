                            </tr>
                            <tr>
                                <th>Id_eval</th>
                                <td>{{ formation.idEval }}</td>
                            </tr>
                            <tr>
                                <th>Date_fin</th>
                                <td>{{ formation.dateFin ? formation.dateFin|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>{{ formation.type }}</td>
                            </tr>
                            <tr>
                                <th>Prix</th>
                                <td>{{ formation.prix }}</td>
                            </tr>
                            <tr>
                                <th>Img</th>
                                <td>{{ formation.img }}</td>
                            </tr>
                            <tr>
                                <th>Id_formateur</th>
                                <td>{{ formation.idFormateur }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('form_crud_index') }}">Retour Ã  la liste</a>

                        <br>
